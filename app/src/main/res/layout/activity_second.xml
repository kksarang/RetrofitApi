<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAECEC"
    tools:context=".First.SecondActivity">

    <TextView
        android:id="@+id/movienamepass"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/languagepass"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/movienamepass"
        app:layout_constraintStart_toStartOf="@+id/movienamepass"
        app:layout_constraintTop_toBottomOf="@+id/movienamepass" />

    <TextView
        android:id="@+id/typepass"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/languagepass"
        app:layout_constraintStart_toStartOf="@+id/languagepass"
        app:layout_constraintTop_toBottomOf="@+id/languagepass" />

    <Button
        android:id="@+id/button"
        android:layout_width="211dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="Cast"
        app:layout_constraintEnd_toEndOf="@+id/typepass"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/typepass" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="MOVIE NAME :"
        app:layout_constraintBottom_toBottomOf="@+id/movienamepass"
        app:layout_constraintEnd_toStartOf="@+id/movienamepass"
        app:layout_constraintTop_toTopOf="@+id/movienamepass" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="LANGUAGE :"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="TYPE :"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>